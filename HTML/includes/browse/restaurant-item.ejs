<li class="restaurant-item">
    <article>
        <h2>
            <%= restaurant.name %>
        </h2>
        <div class="restaurant-meta">
            <p>
                <%= restaurant.cuisine %>
            </p>
            <p>
                <%= restaurant.address %>
            </p>
        </div>
        <p>
            <%= restaurant.recommend %>
        </p>
        <div class="restaurant-actions">
            <a href="/browse/<%= restaurant.id %>">View Restaurant</a>
        </div>
    </article>
</li>